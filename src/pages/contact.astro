---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Mika Revell">
  <div class="max-w-2xl">
    <h1 class="text-2xl lg:text-3xl font-semibold mb-8">Contact</h1>
    <div class="space-y-6 text-text-muted">
      <p>
        For inquiries about commissions, exhibitions, or collaborations:
      </p>
      <p>
        <a href="mailto:hello@mikarevell.com" class="text-text hover:text-accent transition-colors">
          hello@mikarevell.com
        </a>
      </p>
      <p>
        <a
          href="https://www.instagram.com/littlepinkpills/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-text hover:text-accent transition-colors"
        >
          @littlepinkpills
        </a>
      </p>
    </div>
  </div>
</BaseLayout>
